{% extends "base.html.twig" %} {% block title %}Les bandes dessinn√©es de l'auteur{% endblock %} {% block body %} {% for produit in produits %}
<div class="example-wrapper">
    <article>
        <h2>{{ produit.titre }}</h2>
        <div>
            <h2>{{ produit.heros }} - {{ produit.auteur }}</h2>
            <div class="content">
                {% if produit.refbd in couvertures %}
                <img src="{{ asset('images/') }}{{ produit.refbd }}{{'.jpg'}}" alt="{{ produit.refbd }}" class="thumbnail"> {% else %}
                <img src="{{ asset('images/defaut.jpg') }}" alt="aucune couverture" class="thumbnail"> {% endif %}
                <p>{{ produit.resume }}</p>
                {{ produit.refbd }}
                <hr>
                </img>
            </div>
        </div>
    </article>
</div>
{% endfor %}

<style>
    .thumbnail {
        width: 200px;
        height: auto;
        border: solid 2px black;
    }
</style>

{% endblock %}